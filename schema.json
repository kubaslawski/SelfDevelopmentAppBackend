      type: object
      description: Serializer for viewing feedback (user's own feedback).
      properties:
        id:
          type: integer
          readOnly: true
        feedback_type:
          allOf:
          - $ref: '#/components/schemas/FeedbackTypeEnum'
          description: |-
            Type of feedback

            * `bug_report` - Bug Report
            * `suggestion` - Suggestion
            * `comment` - General Comment
            * `question` - Question
        feedback_type_display:
          type: string
          readOnly: true
        title:
          type: string
          description: Brief title/summary of the feedback
          maxLength: 200
        message:
          type: string
          description: Detailed description of the feedback
        app_version:
          type: string
          nullable: true
          description: App version when feedback was submitted
          maxLength: 50
        device_info:
          type: string
          nullable: true
          description: Device/OS information
          maxLength: 200
        screen_name:
          type: string
          nullable: true
          description: Screen/route where user was when submitting feedback
          maxLength: 100
        status:
          allOf:
          - $ref: '#/components/schemas/FeedbackStatusEnum'
          readOnly: true
          description: |-
            Current status of this feedback

            * `new` - New
            * `in_review` - In Review
            * `in_progress` - In Progress
            * `resolved` - Resolved
            * `closed` - Closed
            * `wont_fix` - Won't Fix
        status_display:
          type: string
          readOnly: true
        created_at:
          type: string
          format: date-time
          readOnly: true
        updated_at:
          type: string
          format: date-time
          readOnly: true
      required:
      - created_at
      - feedback_type_display
      - id
      - message
      - status
      - status_display
      - title
      - updated_at
    FeedbackAdmin:
      type: object
      description: Full serializer for admin use - includes all fields.
      properties:
        id:
          type: integer
          readOnly: true
        user:
          type: integer
          readOnly: true
          description: User who submitted this feedback
        user_email:
          type: string
          format: email
          readOnly: true
        feedback_type:
          allOf:
          - $ref: '#/components/schemas/FeedbackTypeEnum'
          description: |-
            Type of feedback

            * `bug_report` - Bug Report
            * `suggestion` - Suggestion
            * `comment` - General Comment
            * `question` - Question
        feedback_type_display:
          type: string
          readOnly: true
        title:
          type: string
          description: Brief title/summary of the feedback
          maxLength: 200
        message:
          type: string
          description: Detailed description of the feedback
        app_version:
          type: string
          nullable: true
          description: App version when feedback was submitted
          maxLength: 50
        device_info:
          type: string
          nullable: true
          description: Device/OS information
          maxLength: 200
        screen_name:
          type: string
          nullable: true
          description: Screen/route where user was when submitting feedback
          maxLength: 100
        status:
          allOf:
          - $ref: '#/components/schemas/FeedbackStatusEnum'
          description: |-
            Current status of this feedback

            * `new` - New
            * `in_review` - In Review
            * `in_progress` - In Progress
            * `resolved` - Resolved
            * `closed` - Closed
            * `wont_fix` - Won't Fix
        status_display:
          type: string
          readOnly: true
        priority:
          nullable: true
          description: |-
            Priority level (set by admin)

            * `low` - Low
            * `medium` - Medium
            * `high` - High
            * `critical` - Critical
