      type: object
      description: Serializer for password change.
      properties:
        old_password:
          type: string
        new_password:
          type: string
        new_password_confirm:
          type: string
      required:
      - new_password
      - new_password_confirm
      - old_password
    EmailTokenObtainPair:
      type: object
      description: Custom JWT serializer that uses email instead of username.
      properties:
        email:
