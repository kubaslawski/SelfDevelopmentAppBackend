  /api/v1/tasks/:
    get:
      operationId: v1_tasks_list
      description: |-
        ViewSet for managing tasks.

        Provides CRUD operations for tasks with filtering, searching, and ordering.
        Supports recurring tasks with completion tracking.

        list:
            Return a list of all tasks.

        create:
            Create a new task.

        retrieve:
            Return a specific task by ID.

        update:
            Update a task.

        partial_update:
            Partially update a task.

        destroy:
            Delete a task.
      parameters:
      - in: query
        name: created_after
        schema:
          type: string
          format: date-time
        description: Created after
      - in: query
        name: created_before
        schema:
          type: string
          format: date-time
        description: Created before
      - in: query
        name: due_date_after
        schema:
          type: string
          format: date-time
        description: Due after
      - in: query
        name: due_date_before
        schema:
          type: string
          format: date-time
        description: Due before
      - in: query
        name: has_due_date
        schema:
          type: boolean
        description: Has due date
      - in: query
        name: is_recurring
        schema:
          type: boolean
      - name: ordering
        required: false
        in: query
        description: Which field to use when ordering the results.
        schema:
          type: string
      - name: page
        required: false
        in: query
        description: A page number within the paginated result set.
        schema:
          type: integer
      - in: query
        name: priority
        schema:
          type: string
          enum:
          - high
          - low
          - medium
          - urgent
        description: |-
          * `low` - Low
          * `medium` - Medium
          * `high` - High
          * `urgent` - Urgent
      - in: query
        name: priority__in
        schema:
          type: array
          items:
            type: string
        description: Multiple values may be separated by commas.
        explode: false
        style: form
      - in: query
        name: recurrence_end_after
        schema:
          type: string
          format: date
        description: Recurrence ends after
      - in: query
        name: recurrence_end_before
        schema:
          type: string
          format: date
        description: Recurrence ends before
      - in: query
        name: recurrence_period
        schema:
          type: string
          nullable: true
          enum:
          - biweekly
          - daily
          - monthly
          - quarterly
          - weekly
          - yearly
        description: |-
          How often the task should be completed (always starts from calendar boundaries)

          * `daily` - Daily
          * `weekly` - Weekly
          * `biweekly` - Every 2 Weeks
          * `monthly` - Monthly
          * `quarterly` - Quarterly
          * `yearly` - Yearly
      - in: query
        name: recurrence_period__in
        schema:
          type: array
          items:
            type: string
        description: Multiple values may be separated by commas.
        explode: false
        style: form
      - name: search
        required: false
        in: query
        description: A search term.
        schema:
          type: string
      - in: query
        name: status
        schema:
          type: string
          enum:
          - archived
          - completed
          - in_progress
          - todo
        description: |-
          * `todo` - To Do
          * `in_progress` - In Progress
          * `completed` - Completed
          * `archived` - Archived
      - in: query
        name: status__in
        schema:
          type: array
          items:
            type: string
