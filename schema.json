components:
  schemas:
    AcceptInvitation:
      type: object
      description: Serializer for accepting an invitation.
      properties:
        invite_code:
          type: string
          maxLength: 32
      required:
      - invite_code
    AssignedRoleEnum:
      enum:
      - member
      - moderator
      - admin
      type: string
      description: |-
        * `member` - Member
        * `moderator` - Moderator
        * `admin` - Admin
    BlankEnum:
      enum:
      - ''
    ChangePassword:
      type: object
      description: Serializer for password change.
      properties:
        old_password:
          type: string
        new_password:
          type: string
        new_password_confirm:
          type: string
      required:
      - new_password
      - new_password_confirm
      - old_password
    ComparisonResult:
      type: object
      description: Comparison between two periods.
      properties:
        current_period:
          $ref: '#/components/schemas/PeriodComparison'
        previous_period:
          allOf:
          - $ref: '#/components/schemas/PeriodComparison'
          nullable: true
        tasks_change:
          type: integer
        tasks_change_percent:
          type: number
          format: double
        habits_change:
          type: integer
        habits_change_percent:
          type: number
          format: double
        time_change:
          type: integer
        time_change_percent:
          type: number
          format: double
        is_improvement:
          type: boolean
        summary:
          type: string
      required:
      - current_period
      - habits_change
      - habits_change_percent
      - is_improvement
      - previous_period
      - summary
      - tasks_change
      - tasks_change_percent
      - time_change
      - time_change_percent
    CreateInvitation:
      type: object
      description: Serializer for creating an invitation.
      properties:
        group_id:
          type: integer
        email:
          type: string
          format: email
        user_id:
          type: integer
          nullable: true
        role:
          allOf:
          - $ref: '#/components/schemas/RoleEnum'
          default: member
        message:
          type: string
          default: ''
        expires_days:
          type: integer
          maximum: 30
          minimum: 1
          default: 7
      required:
      - group_id
    DailyProductivity:
      type: object
      description: Serializer for daily productivity stats.
      properties:
        date:
          type: string
          format: date
          readOnly: true
        tasks_completed:
          type: integer
          readOnly: true
        tasks_created:
          type: integer
          readOnly: true
        habit_completions:
          type: integer
          readOnly: true
          description: Number of recurring task completions
        total_time_spent:
          type: integer
          readOnly: true
          description: Total minutes spent on tasks
        completions_by_hour:
          readOnly: true
          description: Task completions breakdown by hour (0-23)
        milestones_completed:
          type: integer
          readOnly: true
      required:
      - completions_by_hour
      - date
      - habit_completions
      - milestones_completed
      - tasks_completed
      - tasks_created
      - total_time_spent
    DashboardStats:
      type: object
      description: Combined dashboard stats.
      properties:
        streak:
          $ref: '#/components/schemas/UserStreak'
        today:
          allOf:
          - $ref: '#/components/schemas/DailyProductivity'
          nullable: true
        this_week:
          $ref: '#/components/schemas/ProductivitySummary'
        personal_records:
          type: array
          items:
            $ref: '#/components/schemas/PersonalRecord'
        top_habits:
          type: array
          items:
            $ref: '#/components/schemas/HabitPerformance'
        active_goals:
          type: array
          items:
            $ref: '#/components/schemas/GoalProgress'
      required:
      - active_goals
      - personal_records
      - streak
      - this_week
      - today
      - top_habits
    EmailTokenObtainPair:
      type: object
      description: Custom JWT serializer that uses email instead of username.
      properties:
        email:
          type: string
          writeOnly: true
        password:
          type: string
          writeOnly: true
      required:
      - email
      - password
    ErrorResponse:
      type: object
      description: Response serializer for errors.
      properties:
        error:
          type: string
      required:
      - error
    Feedback:
      type: object
      description: Serializer for viewing feedback (user's own feedback).
      properties:
        id:
          type: integer
          readOnly: true
        feedback_type:
          allOf:
          - $ref: '#/components/schemas/FeedbackTypeEnum'
          description: |-
            Type of feedback

            * `bug_report` - Bug Report
            * `suggestion` - Suggestion
            * `comment` - General Comment
