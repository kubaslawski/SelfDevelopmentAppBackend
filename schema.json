              schema:
                $ref: '#/components/schemas/TokenVerify'
          description: ''
  /api/v1/admin/feedback/:
    get:
      operationId: v1_admin_feedback_list
      description: |-
        Admin ViewSet for managing all feedback.
        Only accessible by staff users.
      parameters:
      - in: query
        name: feedback_type
        schema:
          type: string
          enum:
          - bug_report
          - comment
          - question
          - suggestion
        description: |-
          Type of feedback

          * `bug_report` - Bug Report
          * `suggestion` - Suggestion
          * `comment` - General Comment
          * `question` - Question
      - name: page
        required: false
        in: query
        description: A page number within the paginated result set.
        schema:
          type: integer
      - in: query
        name: priority
        schema:
          type: string
          nullable: true
          enum:
          - critical
          - high
          - low
          - medium
        description: |-
          Priority level (set by admin)

          * `low` - Low
          * `medium` - Medium
          * `high` - High
          * `critical` - Critical
      - in: query
        name: status
        schema:
          type: string
          enum:
          - closed
          - in_progress
          - in_review
          - new
          - resolved
          - wont_fix
        description: |-
          Current status of this feedback

          * `new` - New
          * `in_review` - In Review
          * `in_progress` - In Progress
          * `resolved` - Resolved
          * `closed` - Closed
          * `wont_fix` - Won't Fix
      - in: query
        name: user
        schema:
          type: integer
      tags:
      - Admin Feedback
      security:
      - jwtAuth: []
      - cookieAuth: []
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/PaginatedFeedbackAdminList'
          description: ''
    post:
      operationId: v1_admin_feedback_create
